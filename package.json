{
	"name": "electron-vite-template",
	"private": true,
	"version": "0.2.0",
	"type": "module",
	"main": "dist-electron/electron/main.js",
	"scripts": {
		"dev": "npm-run-all --parallel dev:react dev:electron",
		"dev:react": "vite",
		"dev:electron": "npm run transpile:electron && cross-env NODE_ENV=development electron .",
		"build": "npm run transpile:electron && vite build",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"preview": "vite preview",
		"transpile:electron": "tsc --project src/electron/tsconfig.json",
		"test": "jest --config jest.config.cjs",
		"test:unit": "jest --config jest.config.cjs --selectProjects unit",
		"test:integration": "jest --config jest.config.cjs --selectProjects integration",
		"test:ui": "jest --config jest.config.cjs --selectProjects ui",
		"test:watch": "jest --config jest.config.cjs --watch",
		"test:coverage": "jest --config jest.config.cjs --coverage",
		"release:patch": "npm run pre-release && npm version patch && git push origin main --follow-tags",
		"release:minor": "npm run pre-release && npm version minor && git push origin main --follow-tags",
		"release:major": "npm run pre-release && npm version major && git push origin main --follow-tags",
		"pre-release": "echo 'Running tests...' ",
		"dist:mac": "npm run transpile:electron && npm run build && electron-builder --mac --arm64",
		"dist:win": "npm run transpile:electron && npm run build && electron-builder --win --x64",
		"dist:linux": "npm run transpile:electron && npm run build && electron-builder --linux tar.gz --x64"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.1.2",
		"@tailwindcss/vite": "^4.0.6",
		"bcryptjs": "^2.4.3",
		"better-sqlite3": "^12.5.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"d3": "^7.9.0",
		"dotenv": "^17.2.2",
		"exceljs": "^4.4.0",
		"i18next": "^23.16.8",
		"lucide-react": "^0.475.0",
		"os-utils": "^0.0.14",
		"papaparse": "^5.5.3",
		"react": "^19.0.0",
		"react-dom": "^19.0.0",
		"react-i18next": "^15.5.2",
		"shadcn": "^3.5.0",
		"tailwind-merge": "^3.0.1",
		"tailwindcss": "^4.0.6",
		"tailwindcss-animate": "^1.0.7",
		"vite-tsconfig-paths": "^5.1.4",
		"xlsx": "^0.18.5"
	},
	"devDependencies": {
		"@eslint/js": "^9.19.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.2.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/better-sqlite3": "^7.6.13",
		"@types/d3": "^7.4.3",
		"@types/jest": "^29.5.12",
		"@types/os-utils": "^0.0.4",
		"@types/papaparse": "^5.5.1",
		"@types/react": "^19.0.8",
		"@types/react-dom": "^19.0.3",
		"@vitejs/plugin-react": "^4.3.4",
		"cross-env": "^7.0.3",
		"electron": "^34.1.1",
		"electron-builder": "^25.1.8",
		"eslint": "^9.19.0",
		"eslint-plugin-jsdoc": "^50.4.1",
		"eslint-plugin-react-hooks": "^5.0.0",
		"eslint-plugin-react-refresh": "^0.4.18",
		"globals": "^15.14.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.7.0",
		"jest-environment-jsdom": "^29.7.0",
		"npm-run-all": "^4.1.5",
		"ts-jest": "^29.2.5",
		"ts-node": "^10.9.2",
		"typescript": "~5.7.2",
		"typescript-eslint": "^8.22.0",
		"vite": "^6.1.0"
	}
}
