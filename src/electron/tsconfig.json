{
    "compilerOptions": {
        "strict": true,
        "target": "ESNext",
        "module": "NodeNext",
        "outDir": "../../dist-electron",
        "skipLibCheck": true,
        "exactOptionalPropertyTypes": true,
        "isolatedModules": true,
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "types": [
            "node"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.cts",
        "../../types.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
